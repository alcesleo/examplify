#!/usr/bin/env ruby

require "docopt"
require './lib/examplify.rb'

doc = <<DOCOPT
Examplify

Usage:
  examplify <paths>... [--exclude=glob|--only=glob] [--dry-run]
  examplify -h | --help
  examplify --version

Options:
  -h --help        Show this screen.
  --version        Show version.
  -n --dry-run     Only output paths.
  --exclude=glob   Glob pattern of files to exclude.
  --only=glob      Glob pattern to filter files.

DOCOPT

begin
  options = Docopt::docopt(doc)

  fl = Examplify.new(options["<paths>"])

  fl.filter(options["--only"])     if options["--only"]
  fl.exclude(options["--exclude"]) if options["--exclude"]

  if options['--dry-run']
    puts fl.files
  else
    puts fl.output
  end

rescue Docopt::Exit => e
  puts e.message
end
